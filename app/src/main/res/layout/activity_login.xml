<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:scaleType="centerCrop"
        android:src="@drawable/umbrella"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/colorBlack">

        <RelativeLayout
            android:id="@+id/login_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jinsubg">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入用户名"
                android:padding="15dp"
                android:inputType="textFilter"
                android:singleLine="true"
                android:textColor="#3e0303"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/et_username"
                android:background="@color/colorWhite"/>

            <EditText
                android:id="@+id/et_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_username"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#3e0303"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/et_passwd"
                android:background="@color/colorWhite"/>

            <Button
                android:id="@+id/bt_login_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_passwd"
                android:enabled="false"
                android:layout_marginTop="1px"
                android:background="@drawable/bt_loginselector"
                android:text="登录"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/bt_login_regist"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bt_login_login"
                android:text="注册新用户"
                android:textColor="#3e0303"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/bt_retrieve"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt_login_login"
                android:text="忘记密码?"
                android:textColor="#3e0303"
                android:textSize="15sp"
                />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>
