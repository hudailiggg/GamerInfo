<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_top_nav_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_open_slidingmenu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_toolbar_setting_btn_default"/>


    <HorizontalScrollView
        android:id="@+id/hsv_news_top_nav"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:padding="10dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/rg_news_top_nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_toutiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:button="@null"
                    android:text="头条"
                    android:textColor="@color/color_top_nav_text_default"
                    android:textSize="18sp"/>
            </RadioGroup>

            <TextView
                android:id="@+id/tv_sliding_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_nav_slidingblock_selector"
                android:text="滑块"
                android:textColor="@color/color_top_nav_sliding_text"
                android:textSize="20sp"/>
        </FrameLayout>


    </HorizontalScrollView>

    <ImageView
        android:id="@+id/iv_sort_navitem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_toolbar_add_btn_default"/>


</LinearLayout>
