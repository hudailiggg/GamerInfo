<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/color_loginbt_text_pressed" android:state_pressed="true">
        <shape>
            <solid android:color="@color/color_loginbt_bg_pressed"/>
        </shape>
    </item>

    <item android:color="@color/color_loginbt_text_disable" android:state_enabled="false">
        <shape>
            <solid android:color="@color/divlinecolor"/>
        </shape>
    </item>

    <item android:color="@color/color_loginbt_text_enable" android:state_enabled="true">
        <shape>
            <solid android:color="@color/color_loginbt_bg_unpressed"/>
        </shape>
    </item>
</selector>